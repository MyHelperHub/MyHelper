{
  "productName": "myhelper",
  "version": "../package.json",
  "identifier": "myhelper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "myhelper",
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "shadow": false,
        "resizable": false,
        "skipTaskbar": true,
        "transparent": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' 'unsafe-inline' asset: http://asset.localhost http https",
        "media-src": "'self' 'unsafe-inline' asset: http://asset.localhost http https",
        "img-src": "'self' 'unsafe-inline' asset: http://asset.localhost http https data: blob: *",
        "connect-src": "'self' 'unsafe-inline' asset: ipc: http://ipc.localhost http://asset.localhost http https"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "dmg", "app", "appimage", "deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "MyHelper",
    "windows": {
      "digestAlgorithm": "sha256",
      "nsis": {
        "languages": ["SimpChinese"],
        "installMode": "both",
        "installerIcon": "icons/icon.ico"
      }
    },
    "linux": {
      "deb": {
        "depends": [],
        "desktopTemplate": "./MyHelper.desktop"
      },
      "rpm": {
        "depends": [],
        "desktopTemplate": "./MyHelper.desktop"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://api.ialtone.xyz/myhelper/update.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFQkJBNjQ4MTIyNzVCODcKUldTSFd5Y1NTS2E3M2lZN3NGUUFUWGRtVHBXbXJ4blRJQSt6VGVqVmFGNFpGVUlPU3pXM2xja1IK"
    }
  }
}
